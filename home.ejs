                <a href="/quiz2" class="btn btn-primary bg-yellow-400 hover:bg-yellow-500 text-black rounded px-3 py-2">Take Quiz</a>
            </div>

            <!-- Card 3 -->
            <div class="card bg-white rounded-lg shadow-lg p-4 flex-none w-60">
                <h5 class="card-title text-2xl font-semibold">Trending Quiz 3</h5>
                <p class="card-text">How much do you know about this topic?</p>
                <a href="/quiz3" class="btn btn-primary bg-yellow-400 hover:bg-yellow-500 text-black rounded px-3 py-2">Take Quiz</a>
            </div>
    
            <!-- Card 4 -->
            <div class="card bg-white rounded-lg shadow-lg p-4 flex-none w-60">
                <h5 class="card-title text-2xl font-semibold">Trending Quiz 4</h5>
                <p class="card-text">Put your skills to the test with this quiz!</p>
                <a href="/quiz4" class="btn btn-primary bg-yellow-400 hover:bg-yellow-500 text-black rounded px-3 py-2">Take Quiz</a>
            </div>
    
            <!-- Card 5 -->
            <div class="card bg-white rounded-lg shadow-lg p-4 flex-none w-60">
                <h5 class="card-title text-2xl font-semibold">Trending Quiz 5</h5>
                <p class="card-text">Take this quiz and see how you rank!</p>
                <a href="/quiz5" class="btn btn-primary bg-yellow-400 hover:bg-yellow-500 text-black rounded px-3 py-2">Take Quiz</a>
            </div>
        </div>
    </div>

    <%- include('footer') %> <!-- Footer section -->

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
